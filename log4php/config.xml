<configuration xmlns="http://logging.apache.org/log4php/">
    <appender name="myAppender" class="LoggerAppenderFile">
        <layout class="LoggerLayoutPattern">
            <param name="conversionPattern" value="%level [%date{Y-m-d H:i:s}] %message%newline" />
        </layout>
        <param name="file" value="logs/jibub-landing.log" />
    </appender>

    <root>
        <level value="DEBUG" />
        <appender_ref ref="myAppender" />
    </root>
</configuration>